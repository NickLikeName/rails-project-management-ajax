<%= render partial: "all_task_options", locals:{overdue: @overdue, active: @active, complete: @complete} %>

<div class="task-block">
  <h2>All Active Tasks</h2>
  <div class="line-dark"></div>
  <% if @tasks.empty? %>
    <h4>It looks like you don't have any tasks. Why not create new one?</h4>
  <% else %>
    <div class="row">
      <% @tasks.each_with_index do |task, index| %>
        <%= render partial: "task", locals: {task: task, index: index } %>
      <%end %>
    </div>
  <% end %>
</div>



<script id="activeTasksTemplate" type="text/x-handlebars-template">
  <div class="active-tasks-template-js col-md-4" id="{{id}}">
    <h3> <a href="/tasks/{{id}}">{{name}} </a> </h3>
    <p> {{description}} </p>
    <p> Created: {{createdAt}} </p>
    <p> Owner: {{ownerName}} </p>
    <p> Due: {{dueDate}} </p>
    <p> Assigned to: {{assignees}} </p>
    <p> Status: {{status}} </p>
    <p> <a href="/tasks/{{id}}">{{commentCount}} Comments </a> </p>
    <p> Belongs to: <a href="/projects/{{projectId}}">{{projectName}} </p>
    <div class="line-light"></div>
  </div>
</script>

