<div class="default-block">
  <div class="inline-button">
    <%= link_to "Back to Project", project_path(@project), class: "btn btn-default td-button" %>
  </div>
  <div class="inline-button">
    <%= link_to "New Task", new_project_task_path(@project), class: "btn btn-default td-button" %>
  </div>
  <div class="inline-button">
    <%= link_to "Active Tasks ( #{active} )", project_tasks_path(@project), class: "btn btn-warning js-filter", id: "active-tasks"%> 
  </div>
  <div class="inline-button">
    <%= link_to "Complete Tasks ( #{complete} )", complete_project_tasks_path(@project), class: "btn btn-success js-filter", id: "complete-tasks"  %>
  </div>
  <div class="inline-button">
    <%= link_to "Overdue tasks ( #{overdue} )", overdue_project_tasks_path(@project), class: "btn btn-danger js-filter", id: "overdue-tasks" %>
  </div>

  <%= form_tag(project_tasks_path(project), method: "get", id: "filter-tasks-js") do %>
  <%= label_tag(:status, "Filter by:") %>
  <%= select_tag "status", '<option value="0">active</option><option value="1">complete</option>'.html_safe %>
   <%= label_tag(:assigned, "Assigned:") %>
  <%= select_tag "assigned", "<option>All</option><option>To You</option><option>To Others</option>".html_safe %>
  <%= submit_tag("Filter") %>
<% end %>
</div>